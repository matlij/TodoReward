<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:TodoReward.ViewModels"
             xmlns:model="clr-namespace:TodoReward.Core.Models;assembly=TodoReward.Core"
             x:Class="TodoReward.Pages.AddItemPage"
             x:DataType="viewmodel:AddItemViewModel"
             Title="Add">
    <StackLayout Padding="10" Spacing="10">
            <Label Text="Add new Todo item" 
                   FontSize="Large"
                   HorizontalOptions="Center"
                   Padding="10"/>
        <StackLayout Padding="10" Spacing="40" VerticalOptions="StartAndExpand">
            <Entry x:Name="TodoTitleEntry" 
                   Placeholder="Title" 
                   Text="{Binding InputTitle}"
                   ReturnCommand="{Binding AddItemCommand}"/>
            <StackLayout>
                <Label Text="{Binding InputScore, StringFormat='Points: {0:F0}'}"/>
                <Slider Value="{Binding InputScore}" 
                        Maximum="3" 
                        Minimum="1" />
            </StackLayout>
        </StackLayout>
        <StackLayout Padding="10">
            <Button Text="Save" Command="{Binding AddItemCommand}" VerticalOptions="EndAndExpand"/>

        </StackLayout>
    </StackLayout>
</ContentPage>